# Basic Settings
set hidden true
set ignorecase true
set icons true
set sixel true
set preview true
set previewer ~/.config/lf/previewer.sh

# Custom Functions
cmd mkdir ${{ 
  printf "Directory Name: "
  read ans 
  mkdir $ans
}}

cmd mkfile ${{ 
  printf "File Name: "
  read ans 
  vim $ans
}}

# Archive bindings
cmd unarchive ${{ 
  case "$f" in
      *.zip) unzip "$f" ;;
      *.rar) unrar x "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *.7z) 7z e "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd openbin ${{ 
  if [ -d "$f" ]; then
    lf -remote "send $id open"
  elif [ -f "$f" ]; then
    mime=$(file --mime-type -Lb "$f")
    case "$mime" in
      text/*) vim "$f" ;;
      text/x-diff) vim "$f" ;;
      application/mbox) vim "$f" ;;
      image/*) imv "$f" ;;
      video/*) mpv "$f" ;;
      audio/*) mpv "$f" ;;
      image/vnd.djvu|application/pdf|application/postscript|application/epub)
        setsid -f zathura "$f" >/dev/null 2>&1 ;;
      *)
        # check for .cbz extension
        case "${f##*.}" in
          cbz) setsid -f zathura "$f" >/dev/null 2>&1 ;;
          *) echo "No opener configured for: $mime" ;;
        esac
        ;;
    esac
  fi
}}

map c
map d
map m

map au unarchive
map ae $wine "$f"
map <right> openbin

# Basic Functions
map DD delete
map <enter> open
map mf mkfile
map md mkdir
map p paste
map d cut
map y copy
